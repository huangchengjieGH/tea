.productList {
  background-color: white;
  border-radius: 20rpx;
  margin: 50rpx 20rpx;
  box-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  height: 600rpx;  
  overflow: scroll; 
  /* position: relative; */
}

.top {
  display: flex;
  flex-direction: row;
  background-color: rgb(79, 175, 254);
   position: sticky;
  bottom: 0;
  z-index: 2; 
  /* position: fixed;
  width: 94.7%; */
}

.img {
  border-radius: 9rpx;
  /* background-color: rgb(212, 236, 255); *//* width: 44px;height: 45px; */
}

.products {
  padding: 10rpx 40rpx;
  display: flex;
  flex-direction: row;
  position: relative;
  /* overflow: scroll; */
}

.classify {
  margin-top: 10rpx;
  position: absolute;
}

.classifyValue {
  background-color: #34daa4;
  font-size: 25rpx;
  padding: 6rpx;
  border-radius: 8rpx;
  color: white;
  /* margin: 20rpx 40rpx; */
}

.title {
  color: rgb(255, 255, 255);
  display: flex;
  padding-left: 40rpx;
  height: 120rpx;
  align-items: center;
  width: 60%;
}

.product {
  /* display: flex;
  flex-direction: row;
