}

.name {
  /* width:50%; */
  text-align: left;
  font-size: 30rpx;
  color: rgb(84, 84, 84);
}

.phone {
  width: 40%;
  display: flex;
  color: white;
  justify-content: flex-end;
  align-items: center;
  padding-right: 40rpx;
}

.searchCon {
  background-color: white;
  display: flex;
  align-items: center;
  padding: 20rpx 25rpx;
  border-bottom: 1rpx solid #f8f8f8;
}

.avatar {
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
  display: block;
  overflow: hidden;
}

.search {
  display: flex;
  flex-direction: row;
