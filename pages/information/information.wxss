page {
  background-color: #f6f6f6;
}
.body{
  margin-bottom:200rpx;
}
.tarBar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  font-size: 12px;
  align-items: center;
  color: rgb(51, 51, 51);
  z-index: 2;
}

.left {
  display: flex;
  width: 40%;
}

.right {
  display: flex;
  width: 40%;
}

.checkmore {
  color: #4eaefe;
  font-weight: 300;
  font-size: 16px;
  text-align: right;
  margin-right: 20px;
}

.number {
  background-color: red;
  color: white;
  height: 28rpx;
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
  position: absolute;
  left: 38rpx;
}

.number02 {
  background-color: red;
  color: white;
  height: 28rpx;
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
  position: absolute;
  left: 95rpx;
}

.message {
  display: flex;
  position: relative;
}

.chat {
  display: flex;
  justify-content: center;
  align-items: center;
}

.mymy {
  display: flex;
  position: relative;
}

.article__item {
  padding: 30rpx;
  background-color: white;
}

.article__item:not(:last-child) {
  margin-bottom: 30rpx;
}

.article-item__title {
  color: #313131;
  font-size: 36rpx;
  padding-bottom: 30rpx;
}

.article-item__sub-title {
  font-size: 28rpx;
  color: #a1a1a1;
}

.article-item__image {
  width: 100%;
  height: calc((100vw - 30px) * 0.6);
}
